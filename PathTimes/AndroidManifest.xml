<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="jre.pathtimes"
      android:versionCode="51"
      android:versionName="1.51">
    <application android:icon="@drawable/icon" android:label="@string/app_name">
        <activity android:name=".PathTimes"
                  android:label="@string/app_name"
                  android:screenOrientation="portrait" 
                  android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name=".Results"
                  android:label="@string/app_name"
                  android:screenOrientation="portrait"
                  android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
                  
            <intent-filter>
                <action android:name=".Results" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <activity android:name=".MoreInfo"
                  android:label="@string/app_name"
                  android:screenOrientation="portrait"
                  android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
        
            <intent-filter>
                <action android:name=".MoreInfo" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>        
                  
        </activity>
        
        <activity android:name=".GeneralInfo" 
                  android:label="@string/app_name"
                  android:screenOrientation="portrait"
                  android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
            <intent-filter>
                <action android:name=".GeneralInfo" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>          
        </activity>
    </application>
    
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-sdk android:minSdkVersion="4"></uses-sdk> 
</manifest> 