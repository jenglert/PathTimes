<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="jre.pentagram"
      android:versionCode="2"
      android:versionName="1.2">
      
    <uses-sdk android:minSdkVersion="7" />
    <application android:icon="@drawable/icon" android:label="Pentagram">
        <service
            android:label="Pentagram"
            android:name=".PentagramWallpaper"
            android:permission="android.permission.BIND_WALLPAPER">
            <intent-filter>
                <action android:name="android.service.wallpaper.WallpaperService" />
            </intent-filter>
            <meta-data android:name="android.service.wallpaper" android:resource="@xml/pentagram" />
        </service>
    </application>
    
    <uses-feature android:name="android.software.live_wallpaper" />

</manifest> 